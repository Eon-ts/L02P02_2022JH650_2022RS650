@{
    <h1>Venta de Libros</h1>
    <br />
    <form asp-action="CrearCliente">
        <div class="form-group row mb-4">
            <h2>Proceso de venta</h2>
        </div>

        <div class="form-group row mb-4">
            <h3>Datos del Cliente</h3>
        </div>

        <div class="form-group row mb-4">
            <div class="col-sm-2">
                @Html.Label("lblNombre", "Nombre")
            </div>
            <div class="col-sm-4">
                @Html.TextBox("nombre", "", new { @class = "form-control" })
            </div>
            <div class="col-sm-2">
                @Html.Label("lblApellido", "Apellido")
            </div>
            <div class="col-sm-4">
                @Html.TextBox("apellido", "", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row mb-4">
            <div class="col-sm-2">
                @Html.Label("lblEmail", "Email")
            </div>
            <div class="col-sm-10">
                @Html.TextBox("email", "", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row mb-4">
            <div class="col-sm-2">
                @Html.Label("lblDireccion", "Dirección")
            </div>
            <div class="col-sm-10">
                @Html.TextArea("direccion", "", new { @class = "form-control", @rows = "2" })
            </div>
        </div>

       

        <div class="form-group row mb-4">
            <div class="col-sm-12">
                <input type="submit" class="btn btn-success" value="Iniciar Venta" style="width: 100%" />
            </div>
        </div>
            
    </form>
}